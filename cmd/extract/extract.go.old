// file: cmd/extract/extract.go

package extract

import (
	"fmt"
	"path/filepath"
	"strings"
	"github.com/ha1tch/plus3/pkg/diskimg"
)

type ExtractOptions struct {
	StripHeader bool
	OutputDir   string
}

func Extract(diskPath string, filename string, opts ExtractOptions) error {
	disk, err := diskimg.LoadFromFile(diskPath)
	if err != nil {
		return fmt.Errorf("failed to open disk: %v", err)
	}

	outPath := filename
	if opts.OutputDir != "" {
		outPath = filepath.Join(opts.OutputDir, filename)
	}

	ext := strings.ToLower(filepath.Ext(filename))
	switch ext {
	case ".bas":
		err = disk.ExtractBasic(filename, outPath)
	case ".scr":
		err = disk.ExportScreen(filename, outPath)
	default:
		err = disk.ExportFile(filename, outPath, opts.StripHeader)
	}

	if err != nil {
		return fmt.Errorf("failed to extract file: %v", err)
	}

	return nil
}